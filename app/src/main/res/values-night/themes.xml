<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tasks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/windowBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">false</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/light</item>
        <item name="colorSurface">@color/surfaceBackground</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="shapeAppearanceMediumComponent">@style/Theme.Tasks.ShapeAppearanceOverlay</item>
        <item name="shapeAppearanceLargeComponent">@style/Theme.Tasks.ShapeAppearanceOverlay</item>
        <item name="shapeAppearanceOverlay">@style/Theme.Tasks.ShapeAppearanceOverlay</item>
    </style>

    <style name="Theme.Tasks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tasks.ShapeAppearanceOverlay">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>
</resources>